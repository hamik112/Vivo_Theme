.tv-top{
  background: rgba(0, 0, 0, 0) url("https://cdn.shopify.com/s/files/1/1374/7199/files/stepnext_inner_bg.jpg") no-repeat scroll 0 0 / 100% 100%;
  float: left;
  padding:120px 0 180px;
  text-align: center;
  width: 100%;
  position:relative;
}

.tv-top .title{
  color: #ffffff;
  font-family: "Conv_GOTHAM-BLACK";
  font-size: 82px;
  letter-spacing: 2px;
}

.tv-top .subtitle{
  color: #ffffff;
  font-family: "GOTHAM-BOOK";
  font-size: 12pt;
  letter-spacing: 2px;
}

.tv-top .tv-tab-navs{
  position:absolute;
  bottom:0;
  margin: 0 auto;
  text-align: center;
  width:100%;
}

.tv-top .tv-tab-navs .nav-pills{
  
}

.tv-top .tv-tab-navs .nav-pills > li {
	width: 25%;
}



.tv-top .tv-tab-navs .nav-pills > li:first-child{
	margin-left: 20%;
  	margin-right: 5%;
}

.tv-top .tv-tab-navs .nav-pills > li{
	margin-left: 5%;
  	margin-right: 20%;
}

.tv-top .tv-tab-navs .nav-pills > li > a {
    border-radius: 0px;
    color: white;
    background: #8e8e8e;
  	padding: 15px 20px;
   	font-family: 'Conv_GOTHAM-BOLD';
    width: 180px;
}

.tv-top .tv-tab-navs .nav-pills > li.active > a,
.tv-top .tv-tab-navs .nav-pills > li.active > a:hover,
.tv-top .tv-tab-navs .nav-pills > li.active > a:focus {
    color: #fff;
    background-color: #d7dd0e;
}


.tv_container{
  padding: 5% 8%;
  overflow: auto;
}

.tab-pane > ul{
  padding: 0;
}

.member{
  padding: 0 10%;
  display: inline-table;
  min-height: 950px;
}

.member:not(.first_article)
{

}


.member_info{
  padding: 10% 0 5%;
}

.first_article .member_info{
  margin: 0;
  padding: 5% 5%;
}

.member_title{
      
}

.member_name{
  font-family: 'Conv_GOTHAM-BOLD';
  color: #c9ce1d;
  text-transform:uppercase;
  letter-spacing: 0;
  font-size:24pt;
}

.member_job, .member_job p{
  font-family: 'Conv_GOTHAM-BOLD';
  color: #8e8e8e;
  text-transform: uppercase;
  font-size: 16pt;
  font-weight: 100;
  letter-spacing: 0;
}


.member_content{
  margin-top: 10%;
  margin-bottom: 5%;
  overflow: auto;
}

.first_article .member_content{
	margin-top: 5%;
}

.member_content ul, .member_social ul{
	padding: 0;
}

.first_article .member_content ul li{
    width: 40%;
    display: inline-block;
    float: left;
    padding-right: 5%;
}


.member_content li{
  font-family: 'Conv_GOTHAM-BOLD';
  color: #d4d84a;
  font-size: 12pt;
  font-weight:bold;
}

.member_content li p{
  font-family: 'GOTHAM-BOOK';
  color: #2e2e2e;
  font-weight:normal;
  margin-bottom: 10px;
}

.member_social{
	float:left;
  	width: 100%;
}



.member_social ul {
	list-style: none;
}

.member_social ul li{
  	display:inline-block;
}


/* Social Icon*/

.member_social a.fa{
    padding: 10px;
  	width: 50px;
    font-size: 30px;
    text-align: center;
    text-decoration: none;
    border-radius: 50%;
  	color: white;
  	margin-right: 10px;
}


.fa-facebook{
  background: #486fae;
}

.fa-instagram{
  background: #444444;
}

.fa-twitter{
  background: #0ebdf8;
}

.fa-pinterest{
  background: #ca2832;
}

.fa-youtube{
  background: #ca3737;
}

.fa-youtube-play{
  background: #ca3737;
}

/*Overlay Social Icons*/

.image_cotainer
{
  position:relative; 
}


.member_img {
  display: block;
  width: 100%;
}

.member_social_overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
}

.image_cotainer:hover .member_social_overlay {
  opacity: 1;
}

.social_overlay_icons {
  color: white;
  font-size: 20px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
}

.social_overlay_icons ul{
  text-align: center;
}

.social_overlay_icons ul li a.fa{
  background: none;
  color: white;
}




@media(max-width: 1200px){
  
	.tv-top .tv-tab-navs .nav-pills > li {
		width: 30%;
	}
  
  
  	.tv-top .title{
      	font-size: 78px;
  	}
  
  	.tv-top .tv-tab-navs .nav-pills > li a {
		width: 170px;
	}


	.tv-top .tv-tab-navs .nav-pills > li:first-child{
		margin-left: 12%;
  		margin-right: 8%;
	}

	.tv-top .tv-tab-navs .nav-pills > li{
		margin-left: 8%;
  		margin-right: 12%;
	}
  
  	.first_article .member_content ul li{
      	width: 48%;
  	}
}



@media(max-width: 978px){
  
  	.tv-top .title{
      	font-size: 72px;
  	}
  
  	.first_article .member_content ul li{
    	width: 100%;
	}
  
	.tv-top .tv-tab-navs .nav-pills > li {
		width: 35%;
	}


	.tv-top .tv-tab-navs .nav-pills > li:first-child{
		margin-left: 12%;
  		margin-right: 3%;
	}

	.tv-top .tv-tab-navs .nav-pills > li{
		margin-left: 3%;
  		margin-right: 12%;
	}
}


@media(max-width: 767px){
  
    .tv-top .title{
      font-size: 68px;
  	}
  
  	.tv-top .tv-tab-navs .nav-pills > li > a {
     	padding: 10px 8px;
    	width: 150px;
  	}
}


@media(max-width: 479px){
  
  
  	.tv-top .title{
      font-size: 62px;
  	}
  
  	.tv-tab-navs > div{
      width: 100%;
      margin: 0 auto;
    }
  
	.tv-top .tv-tab-navs .nav-pills > li {
		width: 42%;
	}


	.tv-top .tv-tab-navs .nav-pills > li:first-child{
		margin-left: 5%;
  		margin-right: 3%;
	}

	.tv-top .tv-tab-navs .nav-pills > li{
		margin-left: 3%;
  		margin-right: 5%;
	}
  
  	.tv-top .tv-tab-navs .nav-pills > li > a {
    	width: 130px;
    	padding: 10px;
    	font-size: 12px;
  	}
  
  	.member_name{
    	font-size: 24px;
  	}
  
  	.member_job{
    	font-size: 16px;
  	}
  
  	.first_article .row-fluid > div {
    	padding-left: 0;
    	padding-right: 0;
	}
  
  	.first_article .member_info{
    	padding-left: 0;
   	}
}

@media (max-width: 234px){
  
  	.tv-top .title{
    	font-size: 52px;
  	}
  
  	.tv-tab-navs > div{
  		padding: 0
    }
  
  	.tv-top .tv-tab-navs .nav-pills > li:first-child	{
    	 margin: 0 auto;
  	}
  
  	.tv-top .tv-tab-navs .nav-pills > li > a {
    	width: 110px;
    	padding: 10px 5px;
    	font-size: 11px;
	}
}
