                                            <input name="address1" value="" type="hidden">
                                            <input name="address2" value="" type="hidden">
                                            <input name="city" value="" type="hidden">
                                            <input name="company" value="" type="hidden">
                                            <input name="country" value="" type="hidden">
                                            <input name="{{product_index}}_name" value="" type="hidden">
                                            <input name="last_name" value="" type="hidden">
                                            <input name="phone" value="" type="hidden">
                                            <input name="province" value="" type="hidden">
