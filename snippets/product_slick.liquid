                                    <input class="group_id" value="17809" name="properties[group_id]" type="hidden">
                                    <input class="discounted_price" value="{{ all_products[product.handle].variants.first.price | money_with_currency }}" name="properties[discounted_price]"
                                           type="hidden">
                                    <input class="ro_discount_percentage" value="15"
                                           name="properties[_ro_discount_percentage]" type="hidden">
                                    <input class="ro_unformatted_price" value="{{ all_products[product.handle].variants.first.price }}"
                                           name="properties[_ro_unformatted_price]" type="hidden">
                                </form>
                                <div class="hidden {{product_index}}_raw">
